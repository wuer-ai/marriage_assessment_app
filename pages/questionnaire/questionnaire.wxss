/* 相守体检站 - 问卷页面样式 */

.category-container {
  margin-top: 20rpx;
}

.category-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.category-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.skip-option {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.checkbox-label text {
  margin-left: 10rpx;
}

.questions-container {
  margin: 30rpx 0;
}

.question-item {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.answer-options {
  margin-top: 10rpx;
}

.answer-scale {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.scale-label {
  font-size: 24rpx;
  color: #666;
}

.rating-container {
  display: flex;
  justify-content: space-between;
}

.rating-item {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #333;
  font-size: 32rpx;
}

.rating-item.active {
  background-color: #4A90E2;
  color: white;
}

.navigation-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.navigation-buttons .btn {
  width: 45%;
} 